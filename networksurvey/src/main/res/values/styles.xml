<resources>

    <attr name="cardStyle" format="reference" />

    <!-- Base application theme. -->
    <style name="NetworkSurveyTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundFloating">@color/colorCardDark</item>
        <item name="cardStyle">@style/CardViewTheme</item>
    </style>

    <style name="CardViewTheme" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/colorCardDark</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="contentPadding">3dp</item>
    </style>

    <style name="BottomNavigationTheme" parent="NetworkSurveyTheme">
        <item name="android:colorPrimary">@color/activeTabColor</item>
        <item name="android:textColorSecondary">@color/inactiveTabColor</item>
    </style>

    <style name="NetworkSurveyTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="ConnectionSwitchStyle">
        <item name="colorControlActivated">@color/colorCardDark</item>
    </style>

    <style name="CellularTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#c2c1c1</item>
    </style>

    <style name="StatusText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="StandardText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:autoSizeMaxTextSize">18sp</item>
        <item name="android:autoSizeMinTextSize">6sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/normalText</item>
        <item name="android:layout_marginTop">@dimen/x_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/x_small_margin</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
    </style>

    <style name="StandardText.Smaller" parent="StandardText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

    <style name="ColumnTitleText" parent="SmallLabelText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dip</item>
    </style>

    <style name="TableText" parent="StandardText">
        <item name="android:textSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">14sp</item>
        <item name="android:autoSizeMinTextSize">2sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LabelText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#c2c1c1</item>
    </style>

    <style name="SmallStatusText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#c2c1c1</item>
    </style>

    <style name="DescriptionText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#c2c1c1</item>
    </style>

    <style name="SmallLabelText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:autoSizeMaxTextSize">12sp</item>
        <item name="android:autoSizeMinTextSize">6sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
        <item name="android:textColor">@color/fadedText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardTitleStyle" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#c2c1c1</item>
    </style>

    <style name="LabelStyle" parent="android:Widget.TextView">
        <item name="android:layout_marginEnd">@dimen/label_value_margin</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ValueText" parent="TextAppearance.AppCompat">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NetworkStatusText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ListContentText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
    </style>

    <!-- GNSS Status view -->
    <style name="info_label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/status_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">4dip</item>
    </style>

    <style name="info_value">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/status_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- GNSS Sky view -->
    <style name="sky_legend_label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sky_legend_text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sky_legend_value">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sky_legend_text_size_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="cn0_avg_value_in_view">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:background">@drawable/cn0_round_corner_background_in_view</item>
    </style>

    <style name="cn0_avg_value_used" parent="cn0_avg_value_in_view">
        <item name="android:background">@drawable/cn0_round_corner_background_used</item>
    </style>

</resources>
